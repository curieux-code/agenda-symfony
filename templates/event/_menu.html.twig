            <a><i class="fa fa-gift fa-lg"></i> Recherche avancée <span class="arrow"></span></a>
        </li>

        <ul class="sub-menu collapse {% if 'MENU_SEARCH' in menu %}show{% endif %}" id="search">
            <li>
                <div class="menu-search">
                    {{ form_start(form) }}
                        {{ form_row(form.maxPrice) }}
                        <button class="btn btn-primary">Rechercher</button>
                    {{ form_end(form) }}
                </div>
               
            </li>
        </ul>


        <li class="active">
            <a href="{{ path('event_create') }}">
            <i class="fa fa-download fa-lg"></i> Annoncer un évènement
            </a>
        </li>


    </ul>

