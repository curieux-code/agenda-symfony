{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="main">

    <div class="nav-side-menu">
        {% include 'place/_menu.html.twig '%}
    </div>

    <div class="page">

        {% if placetype.place | length > 0 %}
            <div class="title">
                <h2>{{ placetype.plural }}</h2>
                {% include 'partials/choiceView.html.twig '%}
            </div>
            <div class="wrapper list">
                {% for place in placetype.place %}
                    {% include 'place/_place.html.twig '%}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <p>
                    <strong>{{placetype.title}}</strong> n'a pas encore d'annonce sur le site !
                </p>
            </div>
        {% endif %}

    </div>
</div>

{% endblock %}


