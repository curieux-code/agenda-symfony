{% set url = path('festival_show',{'slug': festival.slug }) %}

<div class="item item-more-info">

    <div class="block-visual">

         <div class="block-image">
                <a href="{{ url }}">

                    <div class="img-blur">
                        <img src="{{ festival.coverImage }}" />
                    </div>

                    <div class="img-contain">
                        <img src="{{ festival.coverImage }}" />
                    </div>

                </a>
            </div>

    </div>
    <div class="details">
        <h4>
            <a href="{{ url }}">
                {{ festival.title }}
            </a>
        </h4>
        <h5>
            {% if festival.events | length > 0 %}
                {{festival.events | length}} évènements à venir
            {% endif %}
        </h5>
    </div>

    <div class="more-info">
        <a href="{{ url }}" class="btn btn-primary">Plus d'info</a>
    </div>
    
</div>